<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.sensorberg.sdk.demo.demoOne"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name="com.sensorberg.sdk.demo.DemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="SB Demo 1"
        android:theme="@android:style/Theme.Black" >

        <activity
            android:name="com.sensorberg.sdk.demo.DemoActivity"
            android:label="simple demo"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.sensorberg.sdk.demo.MyActionPresenter"
                  android:process=".sensorberg"
                  android:exported="false">
            <intent-filter>
                <action android:name="com.sensorberg.android.PRESENT_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name="com.sensorberg.sdk.demo.HistoryService.HistoryService"
            android:enabled="true"
            android:exported="false"/>
        <!-- Do not use this in production. It´s only used so you can debug easier-->

        <service android:name="com.sensorberg.sdk.SensorbergService"
            tools:replace="android:process"
            android:process=""/>
            android:process=""/>

        <receiver android:name="com.sensorberg.sdk.GenericBroadcastReceiver"
            tools:replace="android:process"
            android:process=""/>
        <receiver
            android:name="com.sensorberg.sdk.background.ScannerBroadcastReceiver"
            tools:replace="android:process"
            android:process=""/>
        <receiver android:name="com.sensorberg.sdk.SensorbergCodeReceiver"
            tools:replace="android:process"
            android:process=""/>
        <!-- //Do not use this in production. It´s only used so you can debug easier-->

    </application>
</manifest>
